{
  "openapi": "3.0.3",
  "info": {
    "title": "Category Restful API",
    "description": "API Spec for Category Restful API ",
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:3000/api" }],
  "paths": {
    "/categories": {
      "get": {
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "tags": ["Category API"],
        "description": "List of Categories",
        "summary": "List of Categories",
        "responses": {
          "200": {
            "description": "Success get all categories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Category"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "tags": ["Category API"],
        "description": "Create a category",
        "summary": "Create a category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateCategory"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success create a category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Category"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/{categoryId}": {
      "get": {
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "tags": ["Category API"],
        "description": "Get Detail Category",
        "summary": "Get Detail Category",
        "parameters": [
          {
            "name": "categoryId",
            "in": "path",
            "description": "Category Id"
          }
        ],
        "responses": {
          "200": {
            "description": "Get Detail Category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Category"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "tags": ["Category API"],
        "description": "Update Category by Id",
        "summary": "Update Category by Id",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateCategory"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update Category by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Category"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "tags": ["Category API"],
        "description": "Delete Category by Id",
        "summary": "Delete Category by Id",
        "parameters": [
          {
            "name": "categoryId",
            "in": "path",
            "description": "Category Id"
          }
        ],
        "responses": {
          "200": {
            "description": "Delete Category by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "code": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "CategoryAuth": {
        "in": "header",
        "description": "Authentication for Category",
        "type": "apiKey",
        "name": "X-API-Key"
      }
    },
    "schemas": {
      "CreateOrUpdateCategory": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" }
        }
      }
    }
  }
}
